<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_launcher_foreground"
                android:background="@drawable/profile_image_background"
                android:contentDescription="Logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Welcome Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvWelcomeMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="مرحباً بك في InstaBoost Pro"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="احصل على متابعين حقيقيين ولايكات مجانية لانستغرام"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center" />

        </LinearLayout>

        <!-- Instagram Account Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ربط حساب انستغرام"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etInstagramUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="اسم المستخدم (بدون @)"
                android:inputType="text"
                android:padding="16dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnConnectInstagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ربط الحساب"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="@drawable/instagram_button"
                android:textColor="#FFFFFF"
                android:enabled="false" />

            <TextView
                android:id="@+id/tvAccountStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="❌ لم يتم ربط حساب انستغرام"
                android:textSize="14sp"
                android:textColor="#FF0000"
                android:gravity="center"
                android:layout_marginTop="12dp" />

        </LinearLayout>

        <!-- Boost Features Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ميزات الرشق"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnBoostFollowers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔄 رشق المتابعين"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="@drawable/feature_card_background"
                android:textColor="#FFFFFF"
                android:enabled="false"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnBoostLikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="❤️ رشق اللايكات"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="@drawable/feature_card_background"
                android:textColor="#FFFFFF"
                android:enabled="false"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvBoostStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="معلومات مهمة"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• المتابعين واللايكات حقيقية 100%"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• يتم الإرسال تدريجياً لتجنب الحظر"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• آمن تماماً ولا يؤثر على حسابك"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• خدمة مجانية بالكامل"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
